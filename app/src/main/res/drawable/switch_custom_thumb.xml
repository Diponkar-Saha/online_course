<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle" android:dither="true">
            <solid android:color="#ffffff" />
            <corners android:radius="@dimen/switch_thumb_radius" />
            <size android:width="@dimen/switch_thumb_width" android:height="@dimen/switch_thumb_height" />
            <stroke android:width="@dimen/switch_stroke" android:color="@color/progress_color" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:radius="@dimen/switch_thumb_radius" />
            <size android:width="@dimen/switch_thumb_width" android:height="@dimen/switch_thumb_height" />
            <stroke android:width="@dimen/switch_stroke" android:color="@color/green" />
        </shape>
    </item>
</selector>