<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="50"
    android:padding="6dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="5">

        <ImageView
            android:id="@+id/rightArrow"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:background="@drawable/pin"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="30"
        android:weightSum="29"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/forumTitle"
            android:layout_width="wrap_content"
            android:text="Nogor Baul New Song Release"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/subDesc"
            android:layout_width="match_parent"
            android:text="proper cookery renders good food material more digestible"
            android:textColor="@color/dark_2"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stafcreate"
                android:layout_width="wrap_content"
                android:text="Staff Created"
                android:textColor="@color/dark_2"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/created"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Created By"
                android:textColor="@color/dark_2"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Amar i school"
                android:maxLines="2"
                android:textColor="@color/light_blue"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="6 day ago"
            android:textColor="@color/dark_2"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/numberofThread"
            android:layout_width="match_parent"
            android:text="660"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/dark_2"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/threads"
            android:layout_width="match_parent"
            android:text="Threads"
            android:gravity="center"
            android:textColor="@color/dark_2"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/numberreply"
            android:layout_width="match_parent"
            android:text="14"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/dark_2"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/reply"
            android:layout_width="match_parent"
            android:text="Reply"
            android:gravity="center"
            android:textColor="@color/dark_2"
            android:layout_height="wrap_content" />
    </LinearLayout>
    

</LinearLayout>