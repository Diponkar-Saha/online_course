<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Font style for the input text fields -->
    <style name="InputHeaderFont" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_input_font_size</item>
        <!--@TODO PROBLEM: label and text font are the same. even if u use bold font family.
        However, changing the font size or using the pre-defined values, such as ?attr/textAppearanceHeadline1
         in hintTextAppearance works. But not when using the custom font familys-->
    </style>

    <!--[START] Font style declarations -->
    <style name="TextStyle">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextStyle.PageTitle">
        <item name="android:textSize">@dimen/page_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.PageTitleMedium">
        <item name="android:textSize">@dimen/page_title_2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.PageTitleSmall">
        <item name="android:textSize">@dimen/page_title_3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.PageContent">
        <item name="android:textSize">@dimen/page_content</item>
    </style>

    <style name="TextStyle.PageContentMedium">
        <item name="android:textSize">@dimen/page_content_2</item>
    </style>

    <style name="TextStyle.ButtonMedium">
        <item name="android:textSize">@dimen/button_text_2</item>
    </style>

    <style name="TextStyle.CardTitle">
        <item name="android:textSize">@dimen/card_text_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="TextStyle.CardSubTitle">
        <item name="android:textSize">@dimen/card_text_sub_title</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="TextStyle.CardContent">
        <item name="android:textSize">@dimen/card_text_content</item>
    </style>

    <style name="TextStyle.CardSubContent">
        <item name="android:textSize">@dimen/card_text_sub_content</item>
    </style>
    <!--[END] Font style declarations -->

    <!-- Custom theme for the text input edit text views -->
    <style name="CustomErrorFontStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <!-- Custom theme for the text input layouts -->
    <style name="PrimaryTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/InputHeaderFont</item>
        <item name="boxStrokeColor">@color/purple</item>
        <item name="android:textColorHint">@color/purple_light</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/CustomErrorFontStyle</item>
        <item name="boxStrokeErrorColor">@color/colorError</item>
        <item name="hintTextColor">@color/purple</item>
        <item name="boxStrokeWidth">@dimen/text_input_box_width</item>
        <item name="errorTextColor">@color/colorError</item>
        <item name="errorIconTint">@color/colorError</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/text_input_layout_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_input_layout_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_input_layout_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/text_input_layout_radius</item>
    </style>

    <!--Text input layouts with ash background-->
    <style name="FilledTextInputField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxCornerRadiusBottomEnd">@dimen/text_field_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/text_field_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_field_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_field_corner_radius</item>
        <item name="boxBackgroundColor">@color/light_ash</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:textColorHint">@color/color_ash_2</item>
        <item name="startIconTint">@color/color_ash_2</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <!--Text input layout -->
    <style name="TextInputLayout.ContactUs" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/text_input_corner_radius</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:textColorHint">@color/color_ash_2</item>
    </style>


    <style name="Button.FilledButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Button</item>

    </style>

    <style name="ShapeAppearance.Button" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>


    <style name="CartFragmentCardView">
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>

        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="cardElevation">16dp</item>
    </style>

    <style name="MyCourseFragmentCardView">
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>


        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>


    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CustomTabText" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">12sp</item>
    </style>

</resources>